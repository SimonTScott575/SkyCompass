<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="background">
        <item name="android:background">@color/grey_dark</item>
    </style>

    <style name="panel">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:clickable">false</item>
        <item name="android:visibility">invisible</item>
        <item name="cardBackgroundColor">@color/grey_dark</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="tap_surface">
        <item name="android:background">@drawable/rounded_corners_ripple</item>
        <item name="android:backgroundTint">@color/grey_light</item>
    </style>

    <style name="text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_light</item>
    </style>

    <style name="image_button" parent="@android:style/Widget.Material.Light.ImageButton">
        <item name="tint">@color/red_light</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>


    <style name="image_button_opaque" parent="@android:style/Widget.Material.Light.ImageButton">
        <item name="tint">@color/red_light</item>
        <item name="android:background">@drawable/circle_ripple</item>
        <item name="backgroundTint">@color/grey_dark</item>
    </style>

    <style name="picker">
        <item name="android:textColorPrimary">@color/red_light</item>
        <item name="colorControlNormal">@color/red_light</item>
    </style>

    <style name="button_toggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/red_checked_selector</item>
        <item name="android:textColor">@color/red_checked_selector</item>
    </style>

    <style name="image">
        <item name="android:tint">@color/red_light</item>
    </style>

</resources>