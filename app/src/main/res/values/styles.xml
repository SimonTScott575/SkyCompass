<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="background">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="view_panel_default">
        <item name="direction">bottom</item>
    </style>

    <style name="panel">
        <item name="android:background">@drawable/rounded_corners_ripple</item>
        <item name="android:backgroundTint">?attr/colorSurfaceContainer</item>
    </style>

    <style name="image">
        <item name="android:tint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="image_button">
        <item name="android:background">@drawable/circle_ripple</item>
        <item name="android:backgroundTint">?attr/colorSurfaceContainerLow</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="tint">?attr/colorOnSurface</item>
    </style>

</resources>